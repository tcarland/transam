FROM ghcr.io/tcarland/tcalibcore:v24.02.01

USER root

RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    flac \
    lame \
    libtag1-dev \
    libvorbis-dev \
    sox \
    vorbis-tools

COPY . /opt/transam

RUN chown -R tdh:tdh /opt/transam && \
    cd /opt/transam && \
    source resources/build_profile.release && \
    make

WORKDIR /opt/transam

USER tdh

