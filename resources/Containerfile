FROM ghcr.io/tcarland/tcalibcore:v25.02.01

ENV TCAMAKE_PROJECT=/opt

USER root

COPY . /opt/transam

RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    flac \
    lame \
    libtag1-dev \
    libvorbis-dev \
    sox \
    vorbis-tools && \
    chown -R tdh:tdh /opt/transam && \
    cd /opt/transam && \
    source resources/transam_release.env && \
    make

WORKDIR /opt/transam

USER tdh

